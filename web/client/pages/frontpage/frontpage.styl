
@import "nib"

mousehover()
  background-color: rgba(255, 255, 255, 0.2);
  box-shadow: 0px 0px 3px white;
  
centered()
  /* 
    Align in center, both vertical and horizontal.
    Apply only if the height of the element is less than window height. 
    Furthermore the parent must be postioned absolute|fixed|relative.
  */
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  
  

/* FRONTPAGE */

#frontpage {
  width: inherit;
  height: inherit;
  
  /* GENERIC */
  
  .overlay {
    position: fixed;
    z-index: 50;
    bottom: 0;
    width: 100%;
    height: 100%;
    background-repeat: no-repeat;
    background-size: cover;
    background-position: 0 1px;
    background-attachment: fixed;
    
    &.anim-dropout {
      transition: height 1s ease-in, visibility 0s 1s;
      height: 0%;
      visibility: hidden;
      & > * { 
        transition: opacity 1s;
        opacity: 0; 
      }
    }
  }
  
  .slide-nav {
    position: fixed;
    z-index: 40;
    right: 20px;
    top: 50%;
    transform: translateY(-50%);
    & > a {
      display: block;
      margin: 5px 0px;
      width: 16px;
      height: 16px;
      border-radius: 8px;
      background-color: white;
      opacity: 0.3;
      &:hover {
        opacity: 0.6;
      }
      &.active {
        opacity: 1;
        box-shadow: 0 0 3px white; 
      }
    }
  }
  
  .slide {
    position: relative;
    min-width: 100%;
    min-height: 100%;
    background-size: cover;
    background-attachment: fixed;
    background-repeat: no-repeat;
    box-shadow: 0px -5px 5px rgba(0,0,0,0.3);
  }
  
  .slide .content-block {
    margin: 0 auto;
    padding: 100px 20px;
  }
  
  .button {
    border: 1px solid white;
    border-radius: 2px;
    padding: 5px;
    text-align: center;
    text-shadow: 0px 0px 2px rgba(0, 0, 0, 0.2);
    &:hover {
      mousehover();
    }
  }
  
  input[type="text"] {
    background-color: transparent;
    border: 0px;
    border-bottom: 1px solid white;
    border-radius: 2px;
    outline: 0;
  }
  


  /* SPECIFIC */

  /* buttons */

  #logo {
    position: fixed;
    z-index: 90;
    top: 20px;
    left: 20px;
    width: 150px;
    display: block;
    img { width: 100%; }
  }
  #enroll-btn {
    position: absolute;
    z-index: 60;
    bottom: 20px;
    right: 20px;
    width: 100px;
    display: block;
    &.fixed {
      position: fixed;
      top: 20px;
      bottom: auto;
    }
  }
  

  /* overlay */

  #welcomeOverlay {
    background-color: #396e8a;
    background-image: url(/img/backgrounds/frontpage-intro-blur.jpg);
    div { 
      position: relative;
      top: 50%;
      transform: translateY(-50%);
      text-align: center;
      font-size: 3em; 
    }
    .logo {
      position: absolute;
    }
  }
  

  /* slides */
  
  #welcome {
    background-image: url(/img/backgrounds/frontpage-intro.jpg);
    .content-block { 
      width: 440px; 
    }
    #location-block {
      input { 
        width: 100%; 
        font-size: 1.8em; 
      }  
    }
    #enroll-block {
      margin-top: 200px;
      #enroll-btn-large { 
        display: block; 
        font-size: 2.2em; 
        small {
          display: block;
          font-size: 0.5em;
          font-weight: normal;
        } 
      }
      #video-btn-small {
        width: 180px;
        padding: 10px;
        margin: 50px auto;
        text-align: center;
        display: block;
        img {
          margin: 0 auto;
          width: 50px;
        }
        span {
          margin-top: 4px;
          display: block;
        }
        &:hover {
          mousehover()
        }
      }
    }
      
  }
  
  #tools {
    background-image: url(/img/backgrounds/frontpage-tools.jpg);
    .row {
      text-align: center;
      & > div {
        padding: 50px 10px;
      }
      img {
        display: block;
        margin: 0 auto;
      }   
    }
  }
  
  #video {
    background-image: url(/img/backgrounds/frontpage-video.jpg);
  
    #video-play {
      centered();
      display: block;
      width: 65%;
      img {
        width: 100%;
      }
      &:hover {
        mousehover();
      }
    }
    
    #video-player {
      position: absolute;
      width: 100%;
      height: 100%;
      z-index: 80;
      background-color: black;
      visibility: hidden;
      opacity: 0;
    }
    
    #video-exit {
      position: absolute;
      top: 25px;
      right: 20px;
      z-index: 80;
      display: block;
      width: 50px;
      height: 50px;
      display: none;
    }
    
    /* toggle visivility */
    &.playing {
      #video-play { display: none; }
      #video-player { visibility: visible; opacity: 1; }
      #video-exit { display: block; }
    }

    /* fade animation */
    #video-player { transition: opacity 0.6s, visibility 0s 0.8s; }
    &.playing #video-player { transition: opacity 0.6s, visibility 0s 0s; }
  }
  
  #manifesto {
    background-image: url(/img/backgrounds/frontpage-manifesto.jpg);
  }
  
  #about {
    background-image: url(/img/backgrounds/frontpage-about.jpg);
  }
  
}
