@import "nib"
@import "style.import"

$pagePaddingHeight = 20px;
$pagePaddingWidth = 40px;

backgroundImage()
  background-image: url(/img/frontpage/bg1-blur.jpg);


html, body {
  margin: 0;
  padding: 0;
  height: 100%;
  width: 100%;
  font-size: 14px;
}
body{
  font-family: 'Tiempos Text', 'open sans';
  -webkit-font-smoothing: antialiased;
  transition: background-image 2s;
  background-color: #396e8a;
  backgroundImage();
  background-repeat: no-repeat;
  background-size: cover;
  background-position: 0 1px;
  background-attachment: fixed;
  color: white;
  /*background-image:linear-gradient(white, #1b3a4b) !important;*/
}
a img {
  text-decoration: none;
  border:0px;
}

/* bootstrap adjustments */
.control-label{
  padding-top: 6px !important;
}
.btn{
  padding: 6px 12px 4px 12px !important;
}

#iron-router-progress {
  background-color: #fff;
  opacity: 0.8;
  -webkit-filter: blur(0px);
  -moz-filter: blur(0px);
  -o-filter: blur(0px);
  -ms-filter: blur(0px);
  filter: blur(0px);
  height: 2px;
}
#iron-router-progress.spinner:before {
    border-color : #fff;
}


/* wrapper around all */

.main-layout {
  width: 100%;
  height: 100%;


  .page {
    padding: $pagePaddingHeight $pagePaddingWidth;
  }
  .page-space {
    height: 100px;
  }

  /* text links */

  a {
    text-decoration: none;
    color: #FFF;
    margin: 0px 2px 0px 2px;
    font-weight: bold;
  }

  a:hover{
    text-decoration: none;
    color: $hover;
    /*border-bottom: 2px dotted #1466a8;
    margin-bottom: -5px;*/
  }

  .small{
    font-size:10px;
  }

  ::selection {
    background: #fff9d0;
  }

  /* bootstrap alerts */

  .alert{
    border-radius: 0px;
    border: 0px;
    background-color: transparent;
    color: #333;
  }

  .alert h1 {
    font-size: 26px;
    margin-bottom: 5px;
  }
  .alert p {
    line-height: 23px;
  }

  .main-alerts,
  .alert-wrapper {
    width: 100%;
    background-color: rgba(255,255,255,0.15);
    /*animation: fadeIn 2s;    
    @keyframes fadeIn {
      from {
        background-color: rgba(255, 249, 208, 1)
      }
      to {
        background-color: rgba(255,255,255,0.15)
      }
    }*/
    .alert {
      margin: 10px 0px;
      width: 550px;
      h1{
        margin-top: -20px;
      }
    }
  }

  .error{
    color: orange;
    font-weight: 700;
  }


  /* page transition effects on outer most div containing the current page */

  & > .route-transition {
    opacity: 0.5;
    &.animated {
      transition-property: opacity;
      transition-duration: 0.8s;
      transition-timing-function: cubic-bezier(0.175, 0.885, 0.32, 1.275);
      transition-delay: 0.0s;
    }
    &.activated {
      opacity: 1;
    }
  }

  /* area */

  .area{
    padding: 24px;
    padding-top: 20px;
    padding-bottom: 12px;
    margin-top: 12px;
    border: 1px solid rgba(0,0,0,0.1);
    background-color: rgba(0,0,0,0.1);

    .highlighted{
      display: block;
      float: left;
      background-color: rgba(255,255,255,1);
      color: #111;
      border-radius: 2px;
      font-weight: bold;
      font-size: 1.2em;
      line-height: 1.2em;
      padding: 4px 8px 4px 8px;
      margin-bottom: 12px;
    }
  }



  /* HEADER */
  /* positioning of the header */

  $headerHeight = 93px;

  #header {
    width: 100%;
    height: $headerHeight;
    overflow: visible;
    position: relative;
    z-index: 100; /* fix to above map on hackers page */

    .floating {
      position: fixed;
      top: 0px;
      left: 0px;

      width: 100%;
      height: $headerHeight;

      .background {
        position: absolute;
        z-index: 2;
        left: 0px;
        top: 0px;
        width: 100%;
        height: $headerHeight;
        background-size: cover;
        backgroundImage();
        opacity: 0.95;
      }

      .content {
        position: relative;
        z-index: 3;
        height: $headerHeight;
      }

      .logo-small { /* left */
        position: absolute;
        top: 32px;
        left: $pagePaddingWidth;
        height: 24px;
        width: 137px;
        background-image: url('/img/frontpage/logo.svg');
      }

      .menu { /* middle */
        margin-top: 6px;
        margin-left: 250px;
        margin-right: 100px;
        font-size: 18px;
        font-weight: 700;

         .menu-item {
          display: block;
          float: left;

          a {
            display: inline-block;
            padding: 12px 0px;
            color: #fff;
            text-decoration: none;
          }
          a:hover{
            text-decoration: none;
            color: $hover;
          }

          &:after {
            padding: 0px 10px 0px 9px;
            content: 'â€¢';
          }
          &:last-of-type:after {
            content: '';
          }
        }
      }

      .session {
        float: right;

        & > * { // first items within .session
          float: left;
        }

        .button {
          margin: 32px 5px;
          height: 32px;
          background-color: rgba(0,0,0,0.1);
          background-image: none;
          .icon {
            position: relative;
            top: 2px;
          }
          &:hover {
            background-color: rgba(0,0,0,0.3);
          }
        }

        #citySelect {
          margin: 32px 5px;
          color: red;
          select {
            background-color: rgba(0,0,0,0.1);
            width: auto;
          }
          select:hover {
            background-color: rgba(0,0,0,0.2);
          }
          @-moz-document url-prefix() {
            optgroup{
              background-color: #fff;
            }
            select:hover {
              background-color: none;
            }
          }
        }

        .account {
          margin: 15px 15px;
          margin-right: $pagePaddingWidth * 0.5;
          .dropdown {
            float: right;
          }
          .dropdown-toggle {
            padding: 0px;
            margin: 0px;
          }
          .dropdown-menu {
            left: -110px;
            margin-top: -13px;
          }
          .icon-user, .icon-remove, .icon-deal{
            margin-top: 3px;
          }
        }

        .karma{
          font-size: 1.8em;
          float: left;
          margin-top: 27px;
          margin-right: 24px;
        }

      }

    }

    /* transition */
    .floating {
      transition: transform 0.3s 0.0s ease-out;
      transform: translateY(-($headerHeight));
    }
    &.active {
      .floating {
        transform: translateY(0px);
      }
      .floating.float {
        border-bottom: 1px solid rgba(255,255,255,0.3);
        box-shadow: 0px 0px 10px rgba(0,0,0,0.15);
      }
    }


  }

  #header.fixed {
    height: 0px;
    .floating {
      .background {
        background-image: none !important;
        background-color: black;
        opacity: 0.4;
      }
    }
  }






  /* INPUT ELEMENTS */

  input.text {
    background: transparent;
    border: 1px dashed transparent;
    box-shadow: none;
    border-radius: 15px;
    padding: 3px 12px;
    color: white;
    margin-left: -11px;
    margin-top: -5px;
    transition: none;
    height:30px;
    outline:0px !important;
    -webkit-appearance:none;
  }
  input.text:hover {
    border: 1px solid rgba(0,0,0,0);
    background-color: rgba(255,255,255,0.1);
  }
  input.text:focus {
    border: 1px solid rgba(0,0,0,0);
    background-color: rgba(255,255,255,0.2);
    box-shadow: none;
  }
  input.text.saved {
    background-color: rgba(255,255,255,0.1);
    border: 1px solid rgba(0,0,0,0);
    color: $hover;
  }
  input.text.invalid {
    border-color: orange;
  }
  input.text::-webkit-input-placeholder { /* WebKit browsers */ color: #bbb; }
  input.text:-moz-placeholder { /* Mozilla Firefox 4 to 18 */ color: #bbb; }
  input.text::-moz-placeholder { /* Mozilla Firefox 19+ */ color: #bbb; }
  input.text:-ms-input-placeholder { /* Internet Explorer 10+ */ color: #bbb; }

  label {
    cursor: pointer;
  }
  label.checkbox.inline {
    float: left;
    margin-right: 15px;
  }
  label.checkbox {
    color: white;
    text-shadow: 1px 1px 1px rgba(44,44,44,0.4);
    font-weight: 100;
    margin-left: 22px;
  }



  .change{
    line-height: 60px;
  }

  .imputPictureRadio{
    visibility: hidden;
  }

  .btn.flat,
  .btn.flat:hover, {
    background-image: none;
  }

  .edit-mode, .toolbar-section, .toolbar-editor, .panel {

      textarea, input[type="text"], select, input[type="password"],
      input[type="datetime"], input[type="datetime-local"],
      input[type="date"], input[type="month"],
      input[type="time"], input[type="week"], input[type="number"],
      input[type="email"], input[type="url"], input[type="search"],
      input[type="tel"], input[type="color"], .uneditable-input, input[type="number"],
      .add-on {
        background-color: rgba(0,0,0,0.6);
        color: #fff;
        border-radius: 2px;
        border: 1px solid rgba(255,255,255,0.15);
        min-width:40px;
      }
      textarea:focus, input[type="text"]:focus, input[type="password"]:focus,
      input[type="datetime"]:focus, input[type="datetime-local"]:focus,
      input[type="date"]:focus, input[type="month"]:focus,
      input[type="time"]:focus, input[type="week"]:focus, input[type="number"]:focus,
      input[type="email"]:focus, input[type="url"]:focus, input[type="search"]:focus,
      input[type="tel"]:focus, input[type="color"]:focus{
        border: 1px solid rgba(255,255,255,0.5);
      }
      $opacity = 0.65;
      .light{
        opacity: $opacity;
      }
      .light:hover{
        opacity: 1;
      }
      .light.flat:hover{
        opacity: $opacity;
      }
      .light.disallowed {
        text-decoration: line-through;
      }
      .light.disallowed:hover {
        opacity: $opacity;
      }

  }



  /* city select */

  #citySelect {
    select {
      color: #fff;
      border: 0px;
      display: block;
      appearance: none;
      -webkit-appearance: none;
      -moz-appearance: none;
      background: url('/img/drop-down-arrow.svg') no-repeat;
      background-position: right 14px top 50%;
      background-color: rgba(255,255,255,0.15);
      text-indent: 0.01px; /* Removes default arrow from firefox*/
      text-overflow: "";  /*Removes default arrow from firefox*/
      padding-left: 12px;
      font-size: 18px;
      line-height: 35px;
      height: 33px;

      optgroup{
        padding: 16px 12px 0px 12px;
        font-style: normal;
        font-weight: normal;
        color: #ccc;
        option{
          color: #000;
          padding: 5px 20px 3px 20px;
        }
      }
    }
    @-moz-document url-prefix() {
      select {
        background-image: none !important;
      }
    }

    select:active, select:focus {
      outline-style: none; -moz-outline-style:none;
    }

    select:hover {
      background: rgba(255,255,255,0.20);
      background: url('/img/drop-down-arrow.svg') no-repeat;
      background-position: right 14px top 50%;
      background-color: rgba(255,255,255,0.25);
    }

    option {
      color: #000;
      padding-left: 12px;
    }
  }
}
/* Replacement for button-inverse of bootstrap 2 */
a.btn.btn-inverse, button.btn.btn-inverse {
    background-color: rgba(255,255,255,0.15);
    color:#fff9d0;
}
